<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="com.example.drinksafe.DrinkCalc$PlaceholderFragment"
    android:background="@drawable/appbackground"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcome"
        android:id="@+id/tvWelcome"
        android:textSize="25dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/selectdrink"
        android:id="@+id/tvSelectDrink"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rgLeft">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beer 4.0% 568ml (Pint)"
                android:textSize="20dp"
                android:checked="false"
                android:id="@+id/rbBeer" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beer 5.0% 330ml (Bottle)"
                android:textSize="20dp"
                android:checked="false"
                android:id="@+id/rbBeer5" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cider 4.5% 568ml (Pint)"
                android:textSize="20dp"
                android:checked="false"
                android:id="@+id/rbCider" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wine 13% 175ml (Glass)"
                android:textSize="20dp"
                android:checked="false"
                android:id="@+id/rbWine" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spirits 40% 25ml (Glass)"
                android:textSize="20dp"
                android:checked="false"
                android:id="@+id/rbSpirits" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alcopops 4.0% 275ml (Bottle)"
                android:textSize="20dp"
                android:checked="false"
                android:id="@+id/rbPops" />
        </RadioGroup>
</LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/quantity"
            android:id="@+id/tvDrinkAmount"
            android:textSize="20dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:id="@+id/etRadioGrp1"
        android:background="#ffffffff"
        android:inputType="number"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/seeunits"
        android:id="@+id/tvUnits"
        android:layout_weight="0.05"
        android:textSize="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvResult"
        android:textSize="20dp"
        android:background="#ffffffff" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Units"
        android:id="@+id/btnUnit"
        android:textSize="20dp"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainmenu"
        android:id="@+id/btnHome"
        android:layout_weight="0.09"
        android:textSize="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvCol1"
        android:visibility="invisible" />
</LinearLayout>
   </ScrollView>
